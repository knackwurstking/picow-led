{
	"name": "PicoW LED",
	"short_name": "PicoW LED",
	"description": "Controlling light at home :)",
	"version": "0.0.1",
	"manifest_version": 3,
	"start_url": "./",
	"scope": "./",
	"id": "picow-led-app",
	"display": "standalone",
	"theme_color": "#1d2021",
	"background_color": "#1d2021",
	"lang": "en",
	"dir": "ltr",
	"categories": ["utilities"],

	"icons": [
		{
			"src": "/favicon.ico",
			"type": "image/x-icon",
			"sizes": "16x16 32x32"
		},
		{ "src": "/icon-192.png", "type": "image/png", "sizes": "192x192" },
		{ "src": "/icon-512.png", "type": "image/png", "sizes": "512x512" },
		{
			"src": "/icon-192-maskable.png",
			"type": "image/png",
			"sizes": "192x192",
			"purpose": "maskable"
		},
		{
			"src": "/icon-512-maskable.png",
			"type": "image/png",
			"sizes": "512x512",
			"purpose": "maskable"
		}
	],

	"prefer_related_applications": false,

	"edge_side_panel": {
		"preferred_width": 400
	},

	"launch_handler": {
		"client_mode": "auto"
	}
}
